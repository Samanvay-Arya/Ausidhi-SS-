<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OffersUniversal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                
                android:id="@+id/Offer_Default_Image_offerUniversal"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:background="?actionBarItemBackground"
                app:srcCompat="@drawable/gadgets_offer"
                tools:ignore="ContentDescription" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10sp"
                android:text="Know More"
                app:autoSizeTextType="uniform"
                android:textColor="@color/purple_700"
                app:autoSizeMaxTextSize="25sp"
                app:autoSizeMinTextSize="12sp"
                android:gravity="center"
                />

            <ImageButton

                android:id="@+id/Offer_Tabular_form_offerUniversal"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="fitXY"
                android:background="?actionBarItemBackground"
                app:srcCompat="@drawable/gadgets_offer"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10sp"
                android:text="Explore Categories"
                app:autoSizeTextType="uniform"
                android:textColor="@color/purple_700"
                app:autoSizeMaxTextSize="25sp"
                app:autoSizeMinTextSize="12sp"
                android:gravity="center"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:id="@+id/OfferUniversal_Search_Topic_RecyclerView"
                android:layout_marginTop="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10sp"
                android:text="Frequently Asked Questions (FAQs)"
                app:autoSizeTextType="uniform"
                android:textColor="@color/Blue_Green"
                app:autoSizeMaxTextSize="25sp"
                app:autoSizeMinTextSize="12sp"
                android:gravity="center"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/OfferUniversal_FAQs_RecyclerView"
                android:layout_marginTop="20sp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>